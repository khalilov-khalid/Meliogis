        <th>
            Uzunluğu
            @*@Html.DisplayNameFor(model => model.LENGTH)*@
        </th>
        <th>
            Qeyd
            @*@Html.DisplayNameFor(model => model.NOTE)*@
        </th>
        <th>
            Təhlükəsizlik növü
            @*@Html.DisplayNameFor(model => model.SECURITY_TYPE)*@
        </th>
        <th>
            SİB
            @*@Html.DisplayNameFor(model => model.SIBS_ID)*@
        </th>
        <th>
            Istismara verildiyi tarix
            @*@Html.DisplayNameFor(model => model.EXPLONATION_DATE)*@
