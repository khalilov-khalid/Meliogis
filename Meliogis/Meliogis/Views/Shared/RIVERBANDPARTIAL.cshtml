    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HEIGHT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LENGTH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOTE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SECURITY_TYPE_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SIBS_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EXPLONATION_DATE)
            </td>
